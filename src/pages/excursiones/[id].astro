    <!-- Botón de llamada -->
    <a href="tel:+1234567890" class="flex justify-center items-center bg-white w-16 h-16 rounded-full shadow-md border hover:scale-105 transition-transform">
      <img src="/icons/phone-icon.svg" alt="Teléfono" class="w-8 h-8" />
    </a>
    <!-- Botón de WhatsApp -->
    <a href="https://wa.me/1234567890" class="flex justify-center items-center bg-white w-16 h-16 rounded-full shadow-md border hover:scale-105 transition-transform">
      <img src="/icons/whatsapp-icon.svg" alt="WhatsApp" class="w-8 h-8" />
    </a>
    <!-- Botón de Gmail -->
    <a href="mailto:example@email.com" class="flex justify-center items-center bg-white w-16 h-16 rounded-full shadow-md border hover:scale-105 transition-transform">
