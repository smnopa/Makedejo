---
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
  isHomePage: boolean;  // Propiedad Boolean
}

const { title, isHomePage = false } = Astro.props;  // Definir isHomePage inicializado en false
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
